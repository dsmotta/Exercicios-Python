def leiaInt(msg):
    ok = False
    val = 0
    while True:
        n = str(input(msg))
        if n.isnumeric():
            valor = int(n)
            ok = True
        else:
            print('DIGITE UM NUMERO INTEIRO VALIDO!')
        if ok:
            break
    return valor


n = leiaInt('Digite um numero: ')
print(f'VocÃª digitou {n}')